.header nav {
  font-family: "Impact", sans-serif;
  background-color: #111;
}

.footer {
  background-color: #111;
  color: #fff;
  font-size: 0.9rem;
}

.hero {
  background: url("../assets/img/hero-bg.jpg") center/cover no-repeat;
  padding: 100px 20px;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.hero h1 {
  font-size: 3rem;
  color: #fff;
  text-shadow: 2px 2px #000;
}
.hero p {
  font-size: 1.2rem;
  color: #fff;
}

